
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
<title>Index</title>
</head>
<body>
    <h3>Products List</h3>
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Option</th>
            @foreach (var product in ViewBag.products) {
        <tr>
            <td>@product.id</td>
            <td>@product.Name</td>
            <td><img src="~/Content/Images/@product.Photo" width="60"/> </td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
            <td><a href="@Url.Action("Details", "Product", new
                    { id = product.id})">Add Rating and Comments</a></td>


        </tr>
            
            }



        </tr>






    </table>








</body>



</html>